FROM node:20-alpine

ARG APP_PORT
ARG JWT_SECRET
ARG INICIAL_USER_BALANCE
ARG DATABASE_URL

ENV APP_PORT=${APP_PORT}
ENV JWT_SECRET=${JWT_SECRET}
ENV INICIAL_USER_BALANCE=${INICIAL_USER_BALANCE}
ENV DATABASE_URL=${DATABASE_URL}

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE ${APP_PORT}

CMD ["npm", "run", "dev"]