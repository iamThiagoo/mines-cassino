---
import Header from '@/components/app/header/Header.astro';
import Footer from '@/components/app/footer/Footer.astro';
import Favicon from '@/assets/favicon.ico';
import { Toaster } from "@/components/ui/toaster"
import "@/styles/globals.css";
import '@fontsource/inter';

import { getLangFromUrl } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={Favicon} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main class="container flex justify-center mx-auto max-w-7xl min-h-[calc(100vh-90px)]">
			<section class="sm:py-20 py-20 w-full relative flex-col overflow-hidden flex justify-center">
				<slot />
				<Footer />
			</section>
		</main>
		<Toaster client:load />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		/* height: 100%; */
		font-family: 'Inter', sans-serif;
		background-color: #091018 !important;
	}
</style>
