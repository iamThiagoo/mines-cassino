---
import BlurFade from "@/components/ui/blur-fade";
import HowWorksDialog from '@/components/app/dialog/how-works'
import UserCard from '@/components/app/card/UserCard.astro'
import Bomb from '@/assets/images/bomb.png'
import { Image } from "astro:assets";
---

<header class="container mx-auto max-w-7xl relative top-5">
  <BlurFade client:only="react" inView={true} inViewMargin="-50px" delay={0.75}>
    <nav
      class="flex justify-between items-center border-b pb-4 border-gray-600"
    >
      <h1>
        <a
          href="/"
          class="text-gray-200 flex items-center text-lg gap-x-2 font-bold hover:opacity-75"
        >
          <Image src={Bomb} class="ml-5 w-10" alt="Logo do app, uma mina." />
          Mines
        </a>
      </h1>

      <ul class="flex items-center gap-x-8 text-gray-300">
        <HowWorksDialog client:load />
        <UserCard />
      </ul>
    </nav>
  </BlurFade>
</header>
